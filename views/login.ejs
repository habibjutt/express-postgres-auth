<h2>Login</h2>
<% if (message) { %>
<p><%= message %></p>
<% } %>

<form method="POST" action="/login">
	<input type="email" name="email" placeholder="Email" required /><br />
	<input
		type="password"
		name="password"
		placeholder="Password"
		required
	/><br />
	<button type="submit">Login</button>
</form>

<a href="/register">Go to Register</a>
