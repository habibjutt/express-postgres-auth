<h2>Register</h2>
<% if (message) { %>
<p><%= message %></p>
<% } %>

<form method="POST" action="/register">
	<input type="email" name="email" placeholder="Email" required /><br />
	<input
		type="password"
		name="password"
		placeholder="Password"
		required
	/><br />
	<button type="submit">Register</button>
</form>

<a href="/login">Go to Login</a>
